		Goto Unwind;
		MGNF B 1 A_FireBullet();
		MGNF C 0 A_MinigunRefire(1);
		Goto Unwind;
		MGNF C 1 A_FireBullet();
		MGNF D 0 A_MinigunRefire(1);
		Goto Unwind;
